<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- =====================================================
         401 – UNAUTHORIZED
         ===================================================== -->
    <template id="portal_401" name="401: Unauthorized">
        <t t-call="portal.portal_layout">
            <div class="container mt-5">
                <h1 class="text-danger">401: Unauthorized</h1>
                <p class="lead">You must be logged in to access this page.</p>

                <div class="alert alert-warning mt-4">
                    <p>
                        <t t-esc="error_message or 'Please log in with a valid account.'"/>
                    </p>
                </div>

                <a href="/my" class="btn btn-primary me-2">
                    <i class="fa fa-home"/> Portal Home
                </a>
                <a href="/" class="btn btn-secondary">
                    <i class="fa fa-globe"/> Main Website
                </a>
            </div>
        </t>
    </template>

    <!-- =====================================================
         403 – FORBIDDEN
         ===================================================== -->
    <template id="portal_403" name="403: Forbidden">
        <t t-call="portal.portal_layout">
            <div class="container mt-5">
                <h1 class="text-danger">403: Forbidden</h1>
                <p class="lead">You do not have permission to access this resource.</p>

                <div class="alert alert-warning mt-4">
                    <p>
                        <t t-esc="error_message or 'Access denied.'"/>
                    </p>
                </div>

                <a href="/my" class="btn btn-primary me-2">
                    <i class="fa fa-home"/> Portal Home
                </a>
                <a href="/" class="btn btn-secondary">
                    <i class="fa fa-globe"/> Main Website
                </a>
            </div>
        </t>
    </template>

    <!-- =====================================================
         500 – INTERNAL SERVER ERROR
         ===================================================== -->
    <template id="portal_500" name="500: Internal Server Error">
        <t t-call="portal.portal_layout">
            <div class="container mt-5">
                <h1 class="text-danger">500: Internal Server Error</h1>
                <p class="lead">An unexpected error occurred on the server.</p>

                <div class="alert alert-warning mt-4">
                    <p>
                        <t t-esc="error_message or 'Please try again later.'"/>
                    </p>
                </div>

                <a href="/my" class="btn btn-primary me-2">
                    <i class="fa fa-home"/> Portal Home
                </a>
                <a href="/" class="btn btn-secondary">
                    <i class="fa fa-globe"/> Main Website
                </a>
            </div>
        </t>
    </template>

    <!-- =====================================================
         TRACEBACK (DEV ONLY – DO NOT USE IN PRODUCTION)
         ===================================================== -->
    <template id="portal_traceback" name="Portal Traceback (Dev)">
        <t t-call="portal.portal_layout">
            <div class="container mt-5">
                <h1 class="text-danger">Traceback</h1>

                <div class="alert alert-danger mt-4">
                    <pre><t t-esc="traceback"/></pre>
                </div>

                <a href="/my" class="btn btn-secondary">
                    Back to Portal
                </a>
            </div>
        </t>
    </template>

</odoo>






