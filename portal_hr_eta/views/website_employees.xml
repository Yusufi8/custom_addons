<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="portal_employees_list" name="Portal Employees List">
        <t t-call="portal.portal_layout">
            <div class="o_portal_wrap">
                <div class="container mt-4">

                    <h2 class="mb-3">Employees</h2>

                    <t t-if="employees">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Job Position</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="employees" t-as="emp">
                                    <tr>
                                        <td>
                                            <a t-att-href="'/my/employees/%s' % emp.id">
                                                <t t-esc="emp.name"/>
                                            </a>
                                        </td>
                                        <td>
                                            <t t-esc="emp.job_title or '-'"/>
                                        </td>
                                        <td>
                                            <t t-esc="emp.work_email or '-'"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <!-- Pager block preserved -->
                        <t t-if="pager and pager['page_count'] &gt; 1">
                            <nav aria-label="Page navigation" class="mt-3">
                                <ul class="pagination">
                                    <li t-att-class="'page-item %s' % ('disabled' if pager['page']['num'] == 1 else '')">
                                        <t t-if="pager['page']['num'] == 1">
                                            <span class="page-link">Prev</span>
                                        </t>
                                        <t t-else="">
                                            <a t-att-href="pager['page_previous']['url']" class="page-link">Prev</a>
                                        </t>
                                    </li>
                                    <t t-foreach="pager['pages']" t-as="p">
                                        <li t-att-class="'page-item %s' % ('active' if p['num'] == pager['page']['num'] else '')">
                                            <t t-if="p['num'] == pager['page']['num']">
                                                <span class="page-link">
                                                    <t t-esc="p['num']"/>
                                                </span>
                                            </t>
                                            <t t-else="">
                                                <a t-att-href="p['url']" class="page-link">
                                                    <t t-esc="p['num']"/>
                                                </a>
                                            </t>
                                        </li>
                                    </t>
                                    <li t-att-class="'page-item %s' % ('disabled' if pager['page']['num'] == pager['page_count'] else '')">
                                        <t t-if="pager['page']['num'] == pager['page_count']">
                                            <span class="page-link">Next</span>
                                        </t>
                                        <t t-else="">
                                            <a t-att-href="pager['page_next']['url']" class="page-link">Next</a>
                                        </t>
                                    </li>
                                </ul>
                            </nav>
                        </t>

                    </t>

                    <t t-else="">
                        <div class="alert alert-info">
                            No employees found.
                        </div>
                    </t>

                </div>
            </div>
        </t>
    </template>

    <template id="portal_employee_form" name="Portal Employee Form">
        <t t-call="portal.portal_layout">
            <div class="o_portal_wrap">
                <div class="container mt-4">
                    <!-- Breadcrumbs: Home / Employees / Employee -->
                    <div class="mb-2 small text-muted">
                        <a href="/my/home" class="me-2">
                            <i class="fa fa-home"/>
                            Home
                        </a>
                        /
                        <a href="/my/employees" class="ms-2">Employees</a>
                    </div>

                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h2 class="mb-0">
                            <t t-esc="employee.name"/>
                        </h2>

                        <t t-if="form_pager">
                            <nav aria-label="Record navigation" class="ms-3">
                                <ul class="pagination pagination-sm mb-0">
                                    <li t-att-class="'page-item %s' % ('disabled' if not form_pager.get('prev_url') else '')">
                                        <t t-if="form_pager.get('prev_url')">
                                            <a t-att-href="form_pager.get('prev_url')" class="page-link">&#171;</a>
                                        </t>
                                        <t t-else="">
                                            <span class="page-link">&#171;</span>
                                        </t>
                                    </li>
                                    <li class="page-item disabled">
                                        <span class="page-link">
                                            <t t-esc="form_pager.get('index')"/>
                                            /
                                            <t t-esc="form_pager.get('total')"/>
                                        </span>
                                    </li>
                                    <li t-att-class="'page-item %s' % ('disabled' if not form_pager.get('next_url') else '')">
                                        <t t-if="form_pager.get('next_url')">
                                            <a t-att-href="form_pager.get('next_url')" class="page-link">&#187;</a>
                                        </t>
                                        <t t-else="">
                                            <span class="page-link">&#187;</span>
                                        </t>
                                    </li>
                                </ul>
                            </nav>
                        </t>
                    </div>

                    <div class="card mt-3">
                        <div class="card-body">
                            <p>
                                <strong>Job Position:</strong>
                                <t t-esc="employee.job_title or '-'"/>
                            </p>
                            <p>
                                <strong>Email:</strong>
                                <t t-esc="employee.work_email or '-'"/>
                            </p>
                            <p>
                                <strong>Phone:</strong>
                                <t t-esc="employee.work_phone or '-'"/>
                            </p>
                            <p>
                                <strong>Department:</strong>
                                <t t-esc="employee.department_id.name or '-'"/>
                            </p>
                        </div>
                    </div>

                    <a href="/my/employees" class="btn btn-secondary mt-3">
                        ← Back to Employees
                    </a>
                </div>
            </div>
        </t>
    </template>
</odoo>


