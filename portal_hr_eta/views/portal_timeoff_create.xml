<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_timeoff_create">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">New Leave Request</t>
            </t>

            <div class="o_portal_wrap">
                <div class="container mt-4">

                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="mb-0">New Leave Request</h3>
                        <div>
                            <a href="/my/home" class="btn btn-secondary me-2">
                                <i class="fa fa-home"/> Home
                            </a>
                            <a href="/my/timeoff" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"/> Back
                            </a>
                        </div>
                    </div>

                    <!-- Form -->
                    <form action="/my/timeoff/new"
                          method="post"
                          enctype="multipart/form-data">

                        <input type="hidden"
                               name="csrf_token"
                               t-att-value="request.csrf_token()"/>

                        <!-- Description -->
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <input type="text"
                                   name="description"
                                   class="form-control"/>
                        </div>

                        <!-- Leave Type -->
                        <div class="mb-3">
                            <label class="form-label">Leave Type *</label>
                            <select name="leave_type"
                                    class="form-control"
                                    required="required">
                                <option value="">Select leave type...</option>
                                <t t-foreach="leave_types" t-as="lt">
                                    <option t-att-value="lt.id">
                                        <t t-esc="lt.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>

                        <!-- Dates -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <label class="form-label">Start Date *</label>
                                <input type="date"
                                       name="date_from"
                                       class="form-control"
                                       required="required"/>
                            </div>
                            <div class="col-6">
                                <label class="form-label">End Date *</label>
                                <input type="date"
                                       name="date_to"
                                       class="form-control"
                                       required="required"/>
                            </div>
                        </div>

                        <!-- Native Supporting Documents -->
                        <div class="mb-3">
                            <label class="form-label">Supporting Documents</label>
                            <input type="file"
                                   name="attachments"
                                   class="form-control"
                                   multiple="multiple"/>
                        </div>

                        <!-- Actions -->
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fa fa-save"/> Save
                            </button>
                            <a href="/my/timeoff" class="btn btn-secondary">
                                Cancel
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </t>
    </template>

</odoo>
