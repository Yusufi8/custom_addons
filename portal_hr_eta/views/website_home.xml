<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home_employees"
              inherit_id="portal.portal_my_home"
              priority="100">

        <!-- Insert AFTER existing vendor cards -->
        <xpath expr="//div[@id='portal_vendor_category']"
               position="inside">

            <div class="o_portal_index_card col-md-6 order-2">
                <a href="/my/employees"
                   class="d-flex gap-2 gap-md-3 py-3 pe-2 px-md-3 h-100 rounded text-decoration-none bg-100">

                    <!-- icon -->
                    <div class="o_portal_icon d-block align-self-start">
                        <i class="fa fa-users fa-2x text-primary"/>
                    </div>

                    <!-- text -->
                    <div>
                        <div class="mt-0 mb-1 fs-5 fw-normal lh-1 d-flex gap-2">
                            Employees
                        </div>
                        <div class="opacity-75">
                            View employee details
                        </div>
                    </div>

                </a>
            </div>

        </xpath>

    </template>

</odoo>
