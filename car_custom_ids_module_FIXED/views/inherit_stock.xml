<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_line_lot_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.line.lot.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Insert after the Lead Time field inside RIGHT form column -->
            <xpath expr="//page[@name='order_lines']//form//group/group[2]//div[@name='lead']" position="after">
                <field name="lot_ids"
                       widget="many2many_tags"
                       domain="[('product_id','=', product_id)]"
                       invisible="not show_lot_field"
                       required="require_lot_field"/>
            </xpath>
             <xpath expr="//field[@name='order_line']/list//field[@name='product_uom_qty']" position="before">
                <field name="lot_ids"
                       widget="many2many_tags"
                       domain="[('product_id','=', product_id)]"
                       invisible="not show_lot_field"
                       required="require_lot_field"/>
            </xpath>
        </field>
    </record>
</odoo>


