<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Popup form for sale.order.line (used via form_view_ref on order_line create) -->
    <record id="view_sale_order_line_form_popup_customids" model="ir.ui.view">
        <field name="name">sale.order.line.form.popup.customids</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <form string="Create Order Lines" class="o_form_narrow">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" domain="[('sale_ok','=',True)]"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom" groups="uom.group_uom"/>
                            <field name="price_unit"/>
                            <field name="tax_id"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="customer_lead" class="oe_inline"/>
                            <label for="customer_lead" string="days" class="oe_inline"/>
                            <!-- Show lots/serials related to the selected product -->
                            <field name="lot_ids" widget="many2many_tags" domain="[('product_id','=', product_id)]"/>
                        </group>
                    </group>
                </sheet>
                <!-- Footer replaced by web client buttons when used as a popup -->
                <xpath expr="//footer" position="replace"/>

            </form>
        </field>
    </record>
</odoo>

