<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Order Button -->
    <record id="view_purchase_order_form_inherit_customids" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.customids</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_receive_customs_id"
                        string="Receive Customs ID"
                        type="object"
                        class="btn-primary"/>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <notebook position="inside">
                    <page string="Custom IDs">
                        <field name="customids_ids" context="{'default_operation_type': 'po'}"/>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <!-- List View -->
    <record id="view_customids_list" model="ir.ui.view">
        <field name="name">stock.operation.customids.list</field>
        <field name="model">stock.operation.customids</field>
        <field name="arch" type="xml">
            <list create="0" delete="0" edit="0">
                <field name="reference" readonly="1"/>
                <field name="partner_id"/>
                <field name="purchase_order_id"/>
                <field name="date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_customids_form" model="ir.ui.view">
        <field name="name">stock.operation.customids.form</field>
        <field name="model">stock.operation.customids</field>
        <field name="arch" type="xml">
            <form string="Custom IDs">
                <header>
                    <button name="action_confirm_operation"
                            type="object"
                            string="Confirm"
                            class="btn-primary"
                            invisible="status != 'draft'"/>
                </header>
                <sheet>
                    <group>
                        <field name="reference" readonly="1"/>
                        <field name="partner_id" readonly="1"/>
                        <field name="purchase_order_id" readonly="1"/>
                        <field name="sale_order_id" readonly="1"/>
                        <field name="date" readonly="1"/>
                        <field name="description" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Order Lines" delete="0" create="0">
                            <field name="line_ids" create="0" delete="0" readonly="status != 'draft'">
                                <list delete="0" create="0" editable="top">
                                    <field name="product_id" readonly="1"/>
                                    <field name="lot_id" readonly="1"/>
                                    <!--<field name="serial_chassis_number" string="Serial Number/Chassis Number"/>-->
                                    <field name="custom_id" required="1" readonly="parent.status != 'draft'"/>
                                    <field name="quantity" readonly="1"/>
                                    <!--                                    <field name="attachment_ids" widget="many2many_binary"/>-->
                                </list>
<!--                                <form delete="0" create="0">-->
<!--                                    <sheet>-->
<!--                                        <group>-->
<!--                                            <field name="product_id" readonly="1"/>-->
<!--                                            &lt;!&ndash;<field name="serial_chassis_number"/>&ndash;&gt;-->
<!--                                            <field name="lot_id" readonly="1"/>-->
<!--                                            <field name="custom_id" required="1" readonly="parent.status != 'draft'"/>-->
<!--                                            <field name="quantity" readonly="1"/>-->
<!--                                            &lt;!&ndash;  <field name="attachment_ids" widget="many2many_binary"/>&ndash;&gt;-->
<!--                                        </group>-->
<!--                                    </sheet>-->
<!--                                </form>-->
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_customids" model="ir.actions.act_window">
        <field name="name">Custom IDs</field>
        <field name="res_model">stock.operation.customids</field>
        <field name="view_mode">list,form</field>
        <field name="context">{ 'create': False, 'delete': False }</field>
<!--        <field name="domain">[("status", "!=", "canceled")]</field>-->
    </record>

    <!-- Menu -->
    <menuitem id="menu_customids"
              name="Custom IDs"
              parent="purchase.menu_procurement_management"
              action="action_customids"
              sequence="50"/>
</odoo>
