<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Order Button -->
    <record id="view_purchase_order_form_inherit_customids" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.customids</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_receive_customs_id"
                        string="Receive Customs ID"
                        type="object"
                        class="btn-primary"/>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <notebook position="inside">
                    <page string="Custom IDs">
                        <field name="customids_ids" context="{'default_operation_type': 'po'}"/>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <!-- List View -->
    <record id="view_customids_list" model="ir.ui.view">
        <field name="name">stock.operation.customids.list</field>
        <field name="model">stock.operation.customids</field>
        <field name="arch" type="xml">
            <list>
                <field name="partner_id"/>
                <field name="purchase_order_id"/>
                <field name="date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_customids_form" model="ir.ui.view">
        <field name="name">stock.operation.customids.form</field>
        <field name="model">stock.operation.customids</field>
        <field name="arch" type="xml">
            <form string="Custom IDs">
                <header>
                    <button name="action_confirm_operation"
                            type="object"
                            string="Confirm"
                            class="btn-primary"
                            invisible="status != 'draft'"/>
                </header>
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="purchase_order_id"/>
                        <field name="sale_order_id"/>
                        <field name="date"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="lot_id"/>
                                    <field name="serial_chassis_number" string="Serial Number/Chassis Number"/>
                                    <field name="custom_id"/>
                                    <field name="quantity"/>
<!--                                    <field name="attachment_ids" widget="many2many_binary"/>-->
                                </list>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="serial_chassis_number"/>
                                            <field name="lot_id"/>
                                            <field name="custom_id"/>
                                            <field name="quantity"/>
<!--                                            <field name="attachment_ids" widget="many2many_binary"/>-->
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_customids" model="ir.actions.act_window">
        <field name="name">Custom IDs</field>
        <field name="res_model">stock.operation.customids</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("status", "=", "confirmed")]</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_customids"
              name="Custom IDs"
              parent="stock.menu_stock_warehouse_mgmt"
              action="action_customids"/>
</odoo>

